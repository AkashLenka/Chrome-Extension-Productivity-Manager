{
    "manifest_version": 2,
    "name": "Background Changer",
    "version": "1.0.0",
    "description": "Does stuff with the background.",
    "content_scripts":[
      {
        "matches":["<all_urls>"],
        "js":["content.js"]
      }
    ],
    "browser_action":{
      "default_icon":"/pic/gift.png",
      "default_popup":"clock.html"
    },
    "background":{
      "scripts":["background.js"],
      "persistent": false
    },
    "permissions": ["scripting", "tabs", "activeTab","alarms","storage"]
  }